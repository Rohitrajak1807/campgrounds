<%- include("../partials/header") %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campgrounds</h1>
            <p>The best campgrounds just for you</p>
            <p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a></p>
            <form action="/campgrounds" method="get">
                <input id="search-box" class="form-control form-single-element" type="search" name="search"
                       placeholder="Campground Search..." minlength="1">
                <button class="btn btn-secondary" type="submit">Search</button>
            </form>
        </div>
    </header>
    <div class="row">
        <% if(noMatch) { %>
            <div class="col-md-6">
                <h3 class="alert alert-warning"><%= noMatch %></h3>
            </div>
        <% } %>
        <% if(!noMatch) { %>
            <div class="col-lg-12">
                <h3 class="page-header">Our most popular campsites</h3>
            </div>
        <% } %>
    </div>

    <div class="row text-center">
        <% campgrounds.forEach(function (campground) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-secondary">More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include("../partials/footer") %>
