<%- include("../partials/header") %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Campgrounds</h1>
            <p>The best campgrounds just for you</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">Our most popular campsites</h3>
        </div>
    </div>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function (campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="<%= campground.name %>" height="300px">
                </div>
                <div class="caption text-center">
                    <h4>
                        <%= campground.name %>
                    </h4>
                </div>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-block">More Info</a>
            </div>
        <% }) %>
    </div>
</div>
<%- include("../partials/footer") %>
