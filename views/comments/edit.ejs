<%- include("../partials/header") %>
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h1 class="text-center">Edit comment</h1>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=put" method="post">
                <div class="form-floating">
                    <input id="comment" type="text" class="form-control form-single-element" value="<%= comment.text %>" name="comment[text]" required>
                    <label for="comment">Comment</label>
                </div>
                <button class="w-50 btn btn-lg btn-primary mb-5" type="submit">Submit</button>
            </form>
            <a class="link-secondary" href="/campgrounds/<%= campgroundId %>">Go back</a>
        </div>
</div>
<%- include("../partials/footer") %>
